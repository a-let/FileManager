<Window x:Class="FileManager.UI.Views.MovieListWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FileManager.UI.Views"
        mc:Ignorable="d"
        Title="MovieListWindow" Height="300" Width="300">
	<Grid>
		<ListView Margin="10" Name="lvMovies" ItemsSource="{Binding MovieList}">
			<ListView.View>
				<GridView>
					<GridViewColumn Header="Movie Id" Width="auto" DisplayMemberBinding="{Binding EpisodeId}"/>
					<GridViewColumn Header="Series Id" Width="auto" DisplayMemberBinding="{Binding SeriesId}"/>
					<GridViewColumn Header="Name" Width="auto" DisplayMemberBinding="{Binding Name}"/>
					<GridViewColumn Header="IsSeries" Width="auto" DisplayMemberBinding="{Binding IsSeries}"/>
					<GridViewColumn Header="Format" Width="auto" DisplayMemberBinding="{Binding Format}"/>
					<GridViewColumn Header="Category" Width="auto" DisplayMemberBinding="{Binding Category}"/>
					<GridViewColumn Header="Path" Width="auto" DisplayMemberBinding="{Binding Path}"/>
				</GridView>
			</ListView.View>
		</ListView>
	</Grid>
</Window>