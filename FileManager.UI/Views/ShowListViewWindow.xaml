<UserControl x:Class="FileManager.UI.Views.ShowListViewWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FileManager.UI.Views"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
	<Grid>
		<ListView Margin="10" Name="lvShows" ItemsSource="{Binding ShowList}">
			<ListView.View>
				<GridView>
					<GridViewColumn Header="Show Id" Width="auto" DisplayMemberBinding="{Binding ShowId}"/>
					<GridViewColumn Header="Name" Width="auto" DisplayMemberBinding="{Binding Name}"/>
					<GridViewColumn Header="Category" Width="auto" DisplayMemberBinding="{Binding Category}"/>
					<GridViewColumn Header="Path" Width="auto" DisplayMemberBinding="{Binding Path}"/>
				</GridView>
			</ListView.View>
		</ListView>
	</Grid>
</UserControl>