<Window x:Class="FileManager.UI.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
	<Grid>
		<StackPanel>
			<Button Name="btnEpisodes" Content="Episodes" Command="{Binding EpisodesClickCommand}"/>
			<Button Name="btnMovies" Content="Movies" Command="{Binding MoviesClickCommand}"/>
			<Button Name="btnSeasons" Content="Seasons" Command="{Binding SeasonsClickCommand}"/>
			<Button Name="btnShows" Content="Shows" Command="{Binding ShowsClickCommand}"/>
			<Button Name="btnSeries" Content="Series" Command="{Binding SeriesClickCommand}"/>
		</StackPanel>		
	</Grid>
</Window>